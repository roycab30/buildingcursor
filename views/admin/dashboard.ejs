<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Admin Dashboard</h1>
        
        <!-- Display Messages if any -->
        <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-info"><%= message %></div>
        <% } %>
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <!-- Statistics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Tradespeople</h5>
                        <h3><%= stats.tradesperson_count %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Property Owners</h5>
                        <h3><%= stats.property_owner_count %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Total Projects</h5>
                        <h3><%= stats.total_projects %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Open Projects</h5>
                        <h3><%= stats.open_projects %></h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- Add User Button -->
        <div class="row mb-4">
            <div class="col-12">
                       <a href="/admin/users/add" class="btn btn-primary">Add New User</a>

            </div>
        </div>

        
        <!-- Users List -->
        <div class="card">
            <div class="card-header">
                <h3>Users List</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td><%= user.user_id %></td>
                                <td><%= user.first_name %> <%= user.last_name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.user_type %></td>
                                <td>
                                    <form action="/admin/users/<%= user.user_id %>/status" method="POST" style="display: inline;">
                                        <input type="hidden" name="_method" value="PUT">
                                        <select name="status" onchange="this.form.submit()" class="form-select form-select-sm" style="width: auto; display: inline-block;">
                                            <option value="active" <%= user.status === 'active' ? 'selected' : '' %>>Active</option>
                                            <option value="inactive" <%= user.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                            <option value="suspended" <%= user.status === 'suspended' ? 'selected' : '' %>>Suspended</option>
                                        </select>
                                    </form>
                                    <a href="/admin/users/<%= user.user_id %>/edit" class="btn btn-primary btn-sm ms-2">Edit</a>
                                    <form action="/admin/users/<%= user.user_id %>/delete" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm ms-2" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html> 